{% extends 'layout/default.html.twig' %}

{% block title %}Admin - Lunenburg{% endblock %}

{% block content %}
 <div class="page-header">
        <div class="container-fluid">
            <p></p>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Gebruikersnaam</th>
                        <th scope="col">E-mailadres</th>
                        <th scope="col">Functie</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        {% for rol in user.roles %}

                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ rol }}</td>
                        <td><a class="btn btn-sm btn-primary" href="{{ path('userwijzigen', {'id':user.id}) }}">Wijzigen</a></td>
                    </tr>
                    {% endfor %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <hr>
    </div>
{% endblock %}