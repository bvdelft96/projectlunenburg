{% extends 'layout/default.html.twig' %}

{% block title %}Magazijnmeester - Lunenburg{% endblock %}

{% block content %}

<style>
.zoekformulier{

margin-left: 20px;
margin-top: 30px;
}


</style>


<div class= "zoekformulier">
<form>
<input name="q" value="{{ q }}" placeholder="Zoeken" />
<button type="submit">Zoeken</button>
</form>
</div>

            <br />
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Omschrijving</th>
                        <th scope="col">Magazijnlocatie</th>
                        <th scope="col">Minimum voorraad</th>
                        <th scope="col">Technische voorraad</th>
                        <th scope="col">Gereserveerde voorraad</th>
                        <th scope="col">Vrije voorraad</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for artikel in artikelen %}
                    <tr>
                        <th scope="row">{{ artikel.artikelnummer }}</th>
                        <td>{{ artikel.omschrijving }}</td>
                        <td>{{ artikel.magazijnlocatie }}</td>
                        <td>{{ artikel.minimumVoorraad }}</td>
                        <td>{{ artikel.voorraadaantal }}</td>
                        <td>{{ artikel.gereserveerdeVoorraad }}</td>
                        <td>{{ artikel.vrijeVoorraad }}</td>
                        <td><a class="btn btn-sm btn-primary" href="{{ path('magazijnmeesterartikelwijzigen', {'artikelnummer':artikel.artikelnummer}) }}">Locatie wijzigen</a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <hr>
    </div>
{% endblock %}
