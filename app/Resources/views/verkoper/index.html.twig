{% extends 'layout/default.html.twig' %}

{% block title %}Verkoper - Lunenburg{% endblock %}

{% block content %}

    <div class="page-header">
        <div class="container">
            <h2 class="text-center"> </h2>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Omschrijving</th>
                        <th scope="col">Specificaties</th>
                        <th scope="col">Minimum voorraad</th>
                        <th scope="col">Voorraad aantal</th>
                        <th scope="col">Verkopen</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for artikel in artikelen %}
                    <tr>
                        <th scope="row">{{ artikel.artikelnummer }}</th>
                        <td>{{ artikel.omschrijving }}</td>
                        <td>{{ artikel.specificaties }}</td>
                        <td>{{ artikel.minimumVoorraad }}</td>
                        <td>{{ artikel.voorraadaantal }}</td>
                        <td>{{ artikel.verkopen }}</td>
                        <td><a class="btn btn-sm btn-primary" href="{{ path('verkoperartikelwijzigen', {'artikelnummer':artikel.artikelnummer}) }}">Verkopen wijzigen</a></td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <hr>
    </div>
{% endblock %}